generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DB_URL")
}

// ENUMS
enum Role {
    USER
    ADMIN
    MODERATOR
    GUEST
    SUPER_ADMIN
}

enum UserAccountStatus {
    ACTIVE
    INACTIVE
    PENDING
    SUSPENDED
}

enum VerificationStatus {
    PENDING
    VERIFIED
    REJECTED
}

enum VerificationType {
    ACCOUNT_VERIFICATION
    PASSWORD_RESET
}

enum AuthStatus {
    SIGNED_IN
    SIGNED_OUT
}

model User {
    id                      String                    @id @default(cuid())
    firstName               String?
    lastName                String?
    email                   String                    @unique
    phone                   String?                   @unique
    password                String
    role                    Role                      @default(USER)
    status                  UserAccountStatus         @default(ACTIVE)
    createdAt               DateTime                  @default(now())
    updatedAt               DateTime                  @updatedAt
    authHistory             AuthHistory[]
    AuthVerificationHistory AuthVerificationHistory[]
}

model AuthHistory {
    id          Int        @id @default(autoincrement())
    userId      String
    user        User       @relation(fields: [userId], references: [id])
    status      AuthStatus @default(SIGNED_IN)
    ip          String
    device      String
    signedInAt  DateTime   @default(now())
    signedOutAt DateTime?
}

model AuthVerificationHistory {
    id               Int              @id @default(autoincrement())
    userId           String
    verificationType VerificationType @default(ACCOUNT_VERIFICATION)
    verificationCode String
    issuedAt         DateTime         @default(now())
    expiredAt        DateTime
    verifiedAt       DateTime?
    user             User             @relation(fields: [userId], references: [id])
}
